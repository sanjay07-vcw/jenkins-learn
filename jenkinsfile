pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'go build -o myapp main.go'
            }
        }

        stage('Test') {
            steps {
                sh 'go test ./...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying Go app...'
            }
        }
    }
}
